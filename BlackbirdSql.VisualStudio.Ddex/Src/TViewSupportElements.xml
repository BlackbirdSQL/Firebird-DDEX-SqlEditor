			<DisplayName resource="Identifier_Name_Catalog" />
			<Category resource="Category_Identifier" />
			<Description resource="Identifier_Desc_Catalog" />
		</Property>
		<Property name="TABLE_SCHEMA">
			<DisplayName resource="Identifier_Name_Schema" />
			<Category resource="Category_Identifier" />
			<Description resource="Identifier_Desc_Schema" />
		</Property>
		<Property name="TABLE_NAME">
			<DisplayName resource="Identifier_Name_Table" />
			<Category resource="Category_Identifier" />
			<Description resource="Identifier_Desc_Table" />
		</Property>
		<Property name="COLUMN_NAME">
			<DisplayName resource="Identifier_Name_Name" />
			<Category resource="Category_Identifier" />
			<Description resource="Identifier_Desc_Name" />
		</Property>
		<Property name="COLUMN_DATA_TYPE">
			<DisplayName resource="Property_Name_Column_ProviderDataType" />
			<Category resource="Category_DataType" />
			<Description resource="Property_Desc_Column_ProviderDataType" />
			<StandardValuesRef name="TplStandardValuesColumnDataType"/>
		</Property>
		<Property name="COLUMN_SIZE">
			<DisplayName resource="Property_Name_Column_Length" />
			<Category resource="Category_DataType" />
			<Description resource="Property_Desc_Column_Length" />
		</Property>
		<Property name="NUMERIC_PRECISION">
			<DisplayName resource="Property_Name_Column_Precision" />
			<Category resource="Category_DataType" />
			<Description resource="Property_Desc_Column_Precision" />
		</Property>
		<Property name="NUMERIC_SCALE">
			<DisplayName resource="Property_Name_Column_Scale" />
			<Category resource="Category_DataType" />
			<Description resource="Property_Desc_Column_Scale" />
		</Property>
		<Property name="IS_NULLABLE">
			<DisplayName resource="Property_Name_Column_Nullable" />
			<Category resource="Category_DataType" />
			<Description resource="Property_Desc_Column_Nullable" />
		</Property>
		<Property name="CHARACTER_SET_NAME">
			<DisplayName resource="Property_Name_Column_CharacterSet" />
			<Category resource="Category_DataType" />
			<Description resource="Property_Desc_Column_CharacterSet" />
		</Property>
		<Property name="COLLATION_NAME">
			<DisplayName resource="Property_Name_Column_Collation" />
			<Category resource="Category_DataType" />
			<Description resource="Property_Desc_Column_Collation" />
		</Property>
		<Property name="DESCRIPTION">
			<DisplayName resource="Property_Name_Description" />
			<Description resource="Property_Desc_Description" />
		</Property>
		<Property name="ORDINAL_POSITION">
			<DisplayName resource="Property_Name_Column_Ordinal" />
			<Description resource="Property_Desc_Column_Ordinal" />
		</Property>
		<Property name="COLUMN_DEFAULT">
			<DisplayName resource="Property_Name_Column_Default" />
			<Description resource="Property_Desc_Column_Default" />
		</Property>
	</Define>
	<!-- Definition list of user table unique column properties -->
	<Define name="TplPropertiesListUserTableColumn" >
		<Property name="IN_PRIMARYKEY">
			<DisplayName resource="Property_Name_Column_InPrimaryKey" />
			<Description resource="Property_Desc_Column_InPrimaryKey" />
		</Property>
		<Property name="IS_UNIQUE">
			<DisplayName resource="Property_Name_Column_IsUnique" />
			<Description resource="Property_Desc_Column_IsUnique" />
		</Property>
		<Property name="COMPUTED">
			<DisplayName resource="Property_Name_Column_Computed" />
			<Description resource="Property_Desc_Column_Computed" />
		</Property>
		<Property name="EXPRESSION">
			<DisplayName resource="Property_Name_Column_Expression" />
			<Description resource="Property_Desc_Column_Expression" />
		</Property>
		<Property name="IS_AUTOINCREMENT">
			<DisplayName resource="Property_Name_Column_IsAutoIncrement" />
			<Description resource="Property_Desc_Column_IsAutoIncrement" />
			<StandardValues>
				<StandardValue value="1">True</StandardValue>
				<StandardValue value="0">False</StandardValue>
			</StandardValues>
		</Property>
	</Define>

	<!-- Dummy definition list of system table unique column properties -->
	<Define name="TplPropertiesListSystemTableColumn" />

	<!-- Dummy definition list of table table unique column properties -->
	<Define name="TplPropertiesListTableTableColumn" >
		<Property name="TRIGGER_NAME">
			<DisplayName resource="Property_Name_Column_AutoIncrement" />
			<Description resource="Property_Desc_Column_AutoIncrement" />
		</Property>
	</Define>


	<!-- Definition list of additional trigger table unique column properties -->
	<Define name="TplPropertiesListTriggerTableColumn" >
		<Property name="TRIGGER_NAME">
			<DisplayName resource="Identifier_Name_Trigger" />
			<Category resource="Category_Identifier" />
			<Description resource="Identifier_Desc_Trigger" />
		</Property>
	</Define>

	<!-- Definition of table column properties -->
	<Define name="TplPropertiesTableColumn" parameters="parentType, systemType">
		<Properties>
			<TypeDisplayName resource="Type_Column" />
			<PropertyListRef name="TplPropertiesListStandardTableColumn" />
			<PropertyListRef name="TplPropertiesList$(parentType)TableColumn" />
			<PropertyListRef name="TplPropertiesList$(systemType)TableColumn" />
		</Properties>
	</Define>


	<!-- Definition of column selection -->
	<Define name="TplSelectionRefColumn" parameters="selectionEmpty, parentType, systemType, catalogColumn, schemaColumn, ownerColumn">
		<SelectionRef name="TplSelectionColumn$(selectionEmpty)" arguments="$(parentType),$(systemType),$(catalogColumn), $(schemaColumn), $(ownerColumn)" />
	</Define>

	<!-- Definition of column selection nodes -->
	<Define name="TplSelectionColumn" parameters="parentType, systemType, catalogColumn, schemaColumn, ownerColumn">
		<Selection type="$(parentType)Column" restrictions="$(catalogColumn), $(schemaColumn), $(ownerColumn)">
			<SelectionNode nodeId="Column">
				<DisplayName>{Column.COLUMN_NAME}</DisplayName>
				<Icon name="BlackbirdSql.VisualStudio.Ddex.Resources.ViewSupport.Computed$(parentType)Column.ico" when="{Column.COMPUTED}" assembly="" />
				<Icon name="BlackbirdSql.VisualStudio.Ddex.Resources.ViewSupport.AutoIncrement$(parentType)Column.ico" when="{Column.IS_AUTOINCREMENT} = 1 AND {Column.IS_UNIQUE}" assembly="" />
				<Icon name="BlackbirdSql.VisualStudio.Ddex.Resources.ViewSupport.PrimaryKey$(parentType).ico" when="{Column.IS_UNIQUE}" assembly="" />
				<Icon name="BlackbirdSql.VisualStudio.Ddex.Resources.ViewSupport.UniqueKey$(parentType).ico" when="{Column.IN_PRIMARYKEY}" assembly="" />
				<Icon name="BlackbirdSql.VisualStudio.Ddex.Resources.ViewSupport.$(systemType)$(parentType)Column.ico" assembly="" />
				<PropertiesRef name="TplPropertiesTableColumn" arguments="$(parentType),$(systemType)"/>
			</SelectionNode>
		</Selection>
	</Define>

	<!-- Definition of index node properties -->
	<Define name="TplPropertiesIndex" >
		<Properties>
			<TypeDisplayName resource="Type_Index" />
			<Property name="TABLE_CATALOG">
				<DisplayName resource="Identifier_Name_Catalog" />
				<Category resource="Category_Identifier" />
				<Description resource="Identifier_Desc_Catalog" />
			</Property>
			<Property name="TABLE_SCHEMA">
				<DisplayName resource="Identifier_Name_Schema" />
				<Category resource="Category_Identifier" />
				<Description resource="Identifier_Desc_Schema" />
			</Property>
			<Property name="TABLE_NAME">
				<DisplayName resource="Identifier_Name_Table" />
				<Category resource="Category_Identifier" />
				<Description resource="Identifier_Desc_Table" />
			</Property>
			<Property name="INDEX_NAME">
				<DisplayName resource="Identifier_Name_Name" />
				<Category resource="Category_Identifier" />
				<Description resource="Identifier_Desc_Name" />
			</Property>
			<Property name="IS_PRIMARY">
				<DisplayName resource="Property_Name_Index_IsPrimary" />
				<Description resource="Property_Desc_Index_IsPrimary" />
			</Property>
			<Property name="IS_UNIQUE">
				<DisplayName resource="Property_Name_Index_IsUnique" />
				<Description resource="Property_Desc_Index_IsUnique" />
			</Property>
			<Property name="IS_FOREIGNKEY">
				<DisplayName resource="Property_Name_Index_IsForeignKey" />
				<Description resource="Property_Desc_Index_IsForeignKey" />
			</Property>
			<Property name="IS_SYSTEM_INDEX">
				<DisplayName resource="Property_Name_Type" />
				<StandardValues>
					<StandardValue value="0" resource="Property_Value_IndexType_User" />
					<StandardValue value="1" resource="Property_Value_IndexType_System" />
				</StandardValues>
			</Property>
		</Properties>
	</Define>

	<!-- Definition of index node column properties -->
	<Define name="TplPropertiesIndexColumn" >
		<Properties>
			<TypeDisplayName resource="Type_IndexColumn" />
			<Property name="TABLE_CATALOG">
				<DisplayName resource="Identifier_Name_Catalog" />
				<Category resource="Category_Identifier" />
				<Description resource="Identifier_Desc_Catalog" />
			</Property>
			<Property name="TABLE_SCHEMA">
				<DisplayName resource="Identifier_Name_Catalog" />
				<Category resource="Category_Identifier" />
				<Description resource="Identifier_Desc_Catalog" />
			</Property>
			<Property name="TABLE_NAME">
				<DisplayName resource="Identifier_Name_Table" />
				<Category resource="Category_Identifier" />
				<Description resource="Identifier_Desc_Table" />
			</Property>
			<Property name="INDEX_NAME">
				<DisplayName resource="Identifier_Name_Index" />
				<Category resource="Category_Identifier" />
				<Description resource="Identifier_Desc_Index" />
			</Property>
			<Property name="COLUMN_NAME">
				<DisplayName resource="Identifier_Name_Name" />
				<Category resource="Category_Identifier" />
				<Description resource="Identifier_Desc_Name" />
			</Property>
			<Property name="ORDINAL_POSITION">
				<DisplayName resource="Property_Name_UniqueKeyColumn_Ordinal" />
				<Description resource="Property_Name_UniqueKeyColumn_Ordinal" />
			</Property>
			<!--
			<Property name="COLLATION">
				<DisplayName resource="Property_Name_IndexColumn_Collation" />
				<Description resource="Property_Desc_IndexColumn_Collation" />
				<StandardValues>
					<StandardValue value="1">ASC</StandardValue>
					<StandardValue value="2">DESC</StandardValue>
				</StandardValues>
			</Property>
			-->
			<Property name="COMPUTED">
				<DisplayName resource="Property_Name_Column_Computed" />
				<Description resource="Property_Desc_Column_Computed" />
			</Property>
			<Property name="EXPRESSION">
				<DisplayName resource="Property_Name_Column_Expression" />
				<Description resource="Property_Desc_Column_Expression" />
			</Property>
		</Properties>
	</Define>

	<!-- Definitions of trigger node properties -->
	<Define name="TplPropertiesTrigger" >
		<Properties>
			<TypeDisplayName resource="Type_Trigger" />
			<Property name="TABLE_CATALOG">
				<DisplayName resource="Identifier_Name_Catalog" />
				<Category resource="Category_Identifier" />
				<Description resource="Identifier_Desc_Catalog" />
			</Property>
			<Property name="TABLE_SCHEMA">
				<DisplayName resource="Identifier_Name_Schema" />
				<Category resource="Category_Identifier" />
				<Description resource="Identifier_Desc_Schema" />
			</Property>
			<Property name="TABLE_NAME">
				<DisplayName resource="Identifier_Name_Table" />
				<Category resource="Category_Identifier" />
				<Description resource="Identifier_Desc_Table" />
			</Property>
			<Property name="TRIGGER_NAME">
				<DisplayName resource="Identifier_Name_Name" />
				<Category resource="Category_Identifier" />
				<Description resource="Identifier_Desc_Name" />
			</Property>
			<Property name="TRIGGER_TYPE">
				<DisplayName resource="Property_Name_Trigger_Type" />
				<Description resource="Property_Desc_Trigger_Name" />
				<StandardValues>
					<StandardValue value="1">Before insert</StandardValue>
					<StandardValue value="2">After insert</StandardValue>
					<StandardValue value="3">Before update</StandardValue>
					<StandardValue value="4">After update</StandardValue>
					<StandardValue value="5">Before delete</StandardValue>
					<StandardValue value="6">After delete</StandardValue>
					<StandardValue value="17">Before insert or update</StandardValue>
					<StandardValue value="18">After insert or update</StandardValue>
					<StandardValue value="25">Before insert or delete</StandardValue>
					<StandardValue value="26">After insert or delete</StandardValue>
					<StandardValue value="27">Before update or delete</StandardValue>
					<StandardValue value="28">After update or delete</StandardValue>
					<StandardValue value="113">Before insert, update or delete</StandardValue>
					<StandardValue value="114">After insert, update or delete</StandardValue>
					<StandardValue value="8192">On connect</StandardValue>
					<StandardValue value="8193">On disconnect</StandardValue>
					<StandardValue value="8194">On transaction begin</StandardValue>
					<StandardValue value="8195">On transaction commit</StandardValue>
					<StandardValue value="8196">On transaction rollback"</StandardValue>
