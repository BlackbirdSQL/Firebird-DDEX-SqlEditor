				<Description resource="Property_Desc_Trigger_Dependencies" />
			</Property>
		</Properties>
	</Define>

	<!-- Definition of trigger selection node -->
	<!-- If IS_AUTOINCREMENT + autoIncrementFlag > 2 then it means 'all' -->
	<!-- We set it to '9' for 'all' -->
	<Define name="TplSelectionTriggers" parameters="systemType, systemObjectFlag, autoIncrementFlag, catalogColumn, schemaColumn, ownerColumn" >
		<Selection type="Trigger" restrictions="$(catalogColumn), $(schemaColumn), $(ownerColumn)" filter="IS_SYSTEM_TRIGGER = $(systemObjectFlag) AND (IS_AUTOINCREMENT = $(autoIncrementFlag) OR (IS_AUTOINCREMENT + $(autoIncrementFlag)) > 2)" >
			<SelectionNode nodeId="Trigger">
				<DisplayName>{Trigger.TRIGGER_NAME}</DisplayName>
				<Icon name="BlackbirdSql.VisualStudio.Ddex.Resources.ViewSupport.AutoIncrement$(systemType)Trigger.ico" when="{Trigger.IS_AUTOINCREMENT} = 1" assembly="" />
				<Icon name="BlackbirdSql.VisualStudio.Ddex.Resources.ViewSupport.$(systemType)Trigger.ico" assembly="" />
				<PropertiesRef name="TplPropertiesTrigger" />
				<Children>
					<SelectionRef name="TplSelectionColumn" arguments="Trigger,$(systemType),{Trigger.TABLE_CATALOG},{Trigger.TABLE_SCHEMA},{Trigger.TRIGGER_NAME}" />
				</Children>
			</SelectionNode>
		</Selection>
	</Define>

	<Define name="TplSelectionTriggersNoChildren" parameters="systemType, systemObjectFlag, autoIncrementFlag, catalogColumn, schemaColumn, ownerColumn" >
		<Selection type="Trigger" restrictions="$(catalogColumn), $(schemaColumn), $(ownerColumn)" filter="IS_SYSTEM_TRIGGER = $(systemObjectFlag) AND (IS_AUTOINCREMENT = $(autoIncrementFlag) OR (IS_AUTOINCREMENT + $(autoIncrementFlag)) > 2)" >
			<SelectionNode nodeId="Trigger">
				<DisplayName>{Trigger.TRIGGER_NAME}</DisplayName>
				<Icon name="BlackbirdSql.VisualStudio.Ddex.Resources.ViewSupport.AutoIncrement$(systemType)Trigger.ico" when="{Trigger.IS_AUTOINCREMENT} = 1" assembly="" />
				<Icon name="BlackbirdSql.VisualStudio.Ddex.Resources.ViewSupport.$(systemType)Trigger.ico" assembly="" />
				<PropertiesRef name="TplPropertiesTrigger" />
			</SelectionNode>
		</Selection>
	</Define>


	<!-- Definition of trigger static node properties -->
	<!-- Set up for use with System triggers only ATM, which have no children -->
	<Define name="TplStaticNodeTriggers" parameters="systemType, systemObjectFlag, autoIncrementFlag" >
		<StaticNode nodeId="$(systemType)Triggers">
			<DisplayName resource="Node_Name_$(systemType)Triggers" />
			<Icon name="BlackbirdSql.VisualStudio.Ddex.Resources.ViewSupport.Folder$(systemType)Triggers.ico" assembly="" />
			<Children>
				<SelectionRef name="TplSelectionTriggersNoChildren" arguments="$(systemType),$(systemObjectFlag),$(autoIncrementFlag),null,null,null"/>
			</Children>
		</StaticNode>
	</Define>



	<!-- Definition of table selection node properties -->
	<Define name="TplSelectionTables" parameters="systemType, systemObjectFlag" >
		<Selection type="Table" restrictions="null,null" filter="IS_SYSTEM_TABLE = $(systemObjectFlag) AND NOT (TABLE_TYPE = 'VIEW')">
			<SelectionNode nodeId="Table">
				<DisplayName>{Table.TABLE_NAME}</DisplayName>
				<Icon name="BlackbirdSql.VisualStudio.Ddex.Resources.ViewSupport.$(systemType)Table.ico" assembly="" />
				<Properties>
					<TypeDisplayName resource="Type_Table" />
					<Property name="TABLE_CATALOG">
						<DisplayName resource="Identifier_Name_Catalog" />
						<Category resource="Category_Identifier" />
						<Description resource="Identifier_Desc_Catalog" />
					</Property>
					<Property name="TABLE_SCHEMA">
						<DisplayName resource="Identifier_Name_Schema" />
						<Category resource="Category_Identifier" />
						<Description resource="Identifier_Desc_Schema" />
					</Property>
					<Property name="TABLE_NAME">
						<DisplayName resource="Identifier_Name_Name" />
						<Category resource="Category_Identifier" />
						<Description resource="Identifier_Desc_Name" />
					</Property>
					<Property name="IS_SYSTEM_TABLE">
						<DisplayName resource="Property_Name_Type" />
						<StandardValues>
							<StandardValue value="0" resource="Property_Value_TableType_User" />
							<StandardValue value="1" resource="Property_Value_TableType_System" />
						</StandardValues>
					</Property>
					<Property name="DESCRIPTION">
						<DisplayName resource="Property_Name_Description" />
						<Description resource="Property_Desc_Description" />
					</Property>
				</Properties>
				<Commands>
					<CommandRef name="CommandRetrieveData" />
					<CommandRef name="Command$(systemType)NewQuery" />
				</Commands>
				<Children>
					<StaticNode skipWhen="{Table.IS_SYSTEM_TABLE} = 1" nodeId="Indexes">
						<DisplayName resource="Node_Name_Indexes" />
						<!-- <Icon name="BlackbirdSql.VisualStudio.Ddex.Resources.ViewSupport.FolderIndexes.ico" assembly="" /> -->
						<Children>
							<Selection type="Index" restrictions="{Table.TABLE_CATALOG},{Table.TABLE_SCHEMA},{Table.TABLE_NAME}" filter="IS_PRIMARY = true">
								<SelectionNode nodeId="Index">
									<DisplayName>{Index.INDEX_NAME}</DisplayName>
									<Icon name="PrimaryKey" />
									<PropertiesRef name="TplPropertiesIndex" />
									<Children>
										<Selection type="IndexColumn" restrictions="{Index.TABLE_CATALOG},{Index.TABLE_SCHEMA},{Index.TABLE_NAME},{Index.INDEX_NAME}">
											<SelectionNode nodeId="IndexColumn">
												<DisplayName>{IndexColumn.COLUMN_NAME}</DisplayName>
												<Icon name="BlackbirdSql.VisualStudio.Ddex.Resources.ViewSupport.ComputedColumn.ico" when="{IndexColumn.COMPUTED}" assembly="" />
												<Icon name="Column" />
												<PropertiesRef name="TplPropertiesIndexColumn" />
											</SelectionNode>
										</Selection>
									</Children>
								</SelectionNode>
							</Selection>
							<Selection type="Index" restrictions="{Table.TABLE_CATALOG},{Table.TABLE_SCHEMA},{Table.TABLE_NAME}"  filter="IS_PRIMARY = false AND IS_UNIQUE = true">
								<SelectionNode nodeId="Index">
									<DisplayName>{Index.INDEX_NAME}</DisplayName>
									<Icon name="UniqueKey" />
									<PropertiesRef name="TplPropertiesIndex" />
									<Children>
										<Selection type="IndexColumn" restrictions="{Index.TABLE_CATALOG},{Index.TABLE_SCHEMA},{Index.TABLE_NAME},{Index.INDEX_NAME}">
											<SelectionNode nodeId="IndexColumn">
												<DisplayName>{IndexColumn.COLUMN_NAME}</DisplayName>
												<Icon name="BlackbirdSql.VisualStudio.Ddex.Resources.ViewSupport.ComputedColumn.ico" when="{IndexColumn.COMPUTED}" assembly="" />
												<Icon name="Column" />
												<PropertiesRef name="TplPropertiesIndexColumn" />
											</SelectionNode>
										</Selection>
									</Children>
								</SelectionNode>
							</Selection>
							<Selection type="Index" restrictions="{Table.TABLE_CATALOG},{Table.TABLE_SCHEMA},{Table.TABLE_NAME}"  filter="IS_PRIMARY = false AND IS_UNIQUE = false AND IS_FOREIGNKEY = false">
								<SelectionNode nodeId="Index">
									<DisplayName>{Index.INDEX_NAME}</DisplayName>
									<Icon name="Index" />
									<PropertiesRef name="TplPropertiesIndex" />
									<Children>
										<Selection type="IndexColumn" restrictions="{Index.TABLE_CATALOG},{Index.TABLE_SCHEMA},{Index.TABLE_NAME},{Index.INDEX_NAME}">
											<SelectionNode nodeId="IndexColumn">
												<DisplayName>{IndexColumn.COLUMN_NAME}</DisplayName>
												<Icon name="BlackbirdSql.VisualStudio.Ddex.Resources.ViewSupport.ComputedColumn.ico" when="{IndexColumn.COMPUTED}" assembly="" />
												<Icon name="Column" />
												<PropertiesRef name="TplPropertiesIndexColumn" />
											</SelectionNode>
										</Selection>
									</Children>
								</SelectionNode>
							</Selection>
							<Selection type="Index" restrictions="{Table.TABLE_CATALOG},{Table.TABLE_SCHEMA},{Table.TABLE_NAME}"  filter="IS_FOREIGNKEY = true">
								<SelectionNode nodeId="Index">
									<DisplayName>{Index.INDEX_NAME}</DisplayName>
									<Icon name="ForeignKey" />
									<PropertiesRef name="TplPropertiesIndex" />
									<Children>
										<Selection type="IndexColumn" restrictions="{Index.TABLE_CATALOG},{Index.TABLE_SCHEMA},{Index.TABLE_NAME},{Index.INDEX_NAME}">
											<SelectionNode nodeId="IndexColumn">
												<DisplayName>{IndexColumn.COLUMN_NAME}</DisplayName>
												<Icon name="BlackbirdSql.VisualStudio.Ddex.Resources.ViewSupport.ComputedColumn.ico" when="{IndexColumn.COMPUTED}" assembly="" />
												<Icon name="Column" />
												<PropertiesRef name="TplPropertiesIndexColumn" />
											</SelectionNode>
										</Selection>
									</Children>
								</SelectionNode>
							</Selection>
						</Children>
					</StaticNode>
					<StaticNode skipWhen="{Table.IS_SYSTEM_TABLE} = 1" nodeId="ForeignKeys">
						<DisplayName resource="Node_Name_ForeignKeys" />
						<!-- <Icon name="BlackbirdSql.VisualStudio.Ddex.Resources.ViewSupport.FolderForeignKeys.ico" assembly="" /> -->
						<Children>
							<Selection type="TableForeignKey" restrictions="{Table.TABLE_CATALOG},{Table.TABLE_SCHEMA},{Table.TABLE_NAME}">
								<SelectionNode nodeId="ForeignKey">
									<DisplayName>{ForeignKey.CONSTRAINT_NAME}</DisplayName>
									<Icon name="ForeignKey" />
									<Properties>
										<TypeDisplayName resource="Type_ForeignKey" />
										<Property name="CONSTRAINT_CATALOG">
											<DisplayName resource="Identifier_Name_Catalog" />
											<Category resource="Category_Identifier" />
											<Description resource="Identifier_Desc_Catalog" />
										</Property>
										<Property name="CONSTRAINT_SCHEMA">
											<DisplayName resource="Identifier_Name_Schema" />
											<Category resource="Category_Identifier" />
											<Description resource="Identifier_Desc_Schema" />
										</Property>
										<Property name="TABLE_NAME">
											<DisplayName resource="Identifier_Name_Table" />
											<Category resource="Category_Identifier" />
